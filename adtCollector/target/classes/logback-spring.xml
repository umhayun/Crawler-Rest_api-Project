<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration debug="false">
  <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

  <springProfile name="local">
    <root level="DEBUG">
      <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
          <Pattern>%d %p \(%13F:%L\) - %m%n</Pattern>
        </layout>
      </appender>
    </root>
  </springProfile>

  <springProfile name="dev_a">
    <springProperty name="logPath" source="logging.file.path" />
    <root level="INFO">
      <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath}/adtCollector.log</file>
        <append>false</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
          <fileNamePattern>${logPath}/adtCollector.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
          <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
            <maxFileSize>100MB</maxFileSize>
          </timeBasedFileNamingAndTriggeringPolicy>
          <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
          <pattern>%d %p [%c] \(%13F:%L\) - %m%n</pattern>
        </encoder>
      </appender>
    </root>
  </springProfile>

